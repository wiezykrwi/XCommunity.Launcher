<UserControl x:Class="Xcommunity.Launcher.Gui.Views.Modals.CreateProfileModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Xcommunity.Launcher.Gui.Views.Modals"
             xmlns:viewModels="clr-namespace:Xcommunity.Launcher.Gui.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:CreateProfileModalViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Width="300">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Style="{StaticResource TextBlockStyle}">NAME</TextBlock>
        <TextBox Grid.Row="1" Style="{StaticResource TextBoxStyle}" Text="{Binding Name}"></TextBox>
    </Grid>
</UserControl>
